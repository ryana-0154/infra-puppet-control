# Loki configuration
# Managed by Puppet - do not edit manually

auth_enabled: false

server:
  http_listen_port: 3100
  grpc_listen_port: 9096
  log_level: info

# Configure limits for ingestion and querying
limits_config:
  # Disable structured metadata (requires schema v13 to enable)
  allow_structured_metadata: false
  reject_old_samples: true
  reject_old_samples_max_age: 168h  # 7 days

  # Ingestion rate limits
  ingestion_rate_mb: 4
  ingestion_burst_size_mb: 6

  # Query limits
  max_query_length: 721h  # 30 days
  max_query_parallelism: 32
  max_streams_per_user: 10000
  max_global_streams_per_user: 0
  max_chunks_per_query: 100000
  max_query_series: 500

  # Per-stream limits
  per_stream_rate_limit: 3MB
  per_stream_rate_limit_burst: 15MB

  # Retention (7 days default, adjust as needed)
  retention_period: 168h

common:
  instance_addr: <%= @monitoring_ip %>
  path_prefix: /loki
  storage:
    filesystem:
      chunks_directory: /loki/chunks
      rules_directory: /loki/rules
  replication_factor: 1
  ring:
    kvstore:
      store: inmemory

# Compactor for log retention
compactor:
  working_directory: /loki/compactor
  compaction_interval: 10m
  retention_enabled: true
  retention_delete_delay: 2h
  retention_delete_worker_count: 10
  delete_request_store: filesystem

query_range:
  align_queries_with_step: true
  max_retries: 5
  cache_results: true
  results_cache:
    cache:
      embedded_cache:
        enabled: true
        max_size_mb: 500
        ttl: 24h

# Query scheduler for better query distribution
query_scheduler:
  max_outstanding_requests_per_tenant: 256

# Use TSDB for better performance (Loki 2.8+)
schema_config:
  configs:
    - from: 2020-10-24
      store: tsdb
      object_store: filesystem
      schema: v12
      index:
        prefix: index_
        period: 24h

# Storage configuration
storage_config:
  tsdb_shipper:
    active_index_directory: /loki/tsdb-index
    cache_location: /loki/tsdb-cache
    cache_ttl: 24h
  filesystem:
    directory: /loki/chunks

# Ruler configuration for alerts
ruler:
  storage:
    type: local
    local:
      directory: /loki/rules
  rule_path: /loki/rules-temp
  alertmanager_url: http://<%= @monitoring_ip %>:9093
  ring:
    kvstore:
      store: inmemory
  enable_api: true
  enable_alertmanager_v2: true

# Disable analytics
analytics:
  reporting_enabled: false

# Memberlist for clustering (single-instance mode)
memberlist:
  join_members: []
  dead_node_reclaim_time: 30s
  gossip_to_dead_nodes_time: 15s
  left_ingesters_timeout: 30s
  bind_addr:
    - <%= @monitoring_ip %>
  bind_port: 7946
